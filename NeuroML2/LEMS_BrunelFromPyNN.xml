<Lems>
    
    <!-- This LEMS file has been generated from PyNN -->
    
    <!-- Specify which component to run -->
    <Target component="Sim_PyNN_NeuroML2_Export"/>

    <!-- Include core NeuroML2 ComponentType definitions -->
    <Include file="Cells.xml"/>
    <Include file="Networks.xml"/>
    <Include file="Simulation.xml"/>
    
    <Include file="PyNN.xml"/>
    <Include file="PyNN_NeuroML2_Export.nml"/>
   
    <Simulation id="Sim_PyNN_NeuroML2_Export" length="500.0ms" step="0.1ms" target="network" seed="12345">  <!-- Note seed: ensures same random numbers used every run -->
        
        <Display id="E_net_v" title="E_net v" timeScale="1ms" xmin="-50.0" xmax="550.0" ymin="-70" ymax="10">
            <Line id="E_net v: cell 42" quantity="E_net/0/IF_curr_alpha_E_net/v" scale="1mV" color="#676b00" timeScale="1ms"/>
            <Line id="E_net v: cell 43" quantity="E_net/1/IF_curr_alpha_E_net/v" scale="1mV" color="#e3d331" timeScale="1ms"/>
        </Display>
        
        <Display id="I_net_v" title="I_net v" timeScale="1ms" xmin="-50.0" xmax="550.0" ymin="-70" ymax="10">
            <Line id="I_net v: cell 82" quantity="I_net/0/IF_curr_alpha_I_net/v" scale="1mV" color="#a88550" timeScale="1ms"/>
            <Line id="I_net v: cell 83" quantity="I_net/1/IF_curr_alpha_I_net/v" scale="1mV" color="#b9df1b" timeScale="1ms"/>
        </Display>
        
        <OutputFile id="OF_E_net_v" fileName="E_net_v.dat">
            <OutputColumn id="E_net_0_IF_curr_alpha_E_net_v" quantity="E_net/0/IF_curr_alpha_E_net/v"/> 
            <OutputColumn id="E_net_1_IF_curr_alpha_E_net_v" quantity="E_net/1/IF_curr_alpha_E_net/v"/> 
        </OutputFile>
        
        <OutputFile id="OF_I_net_v" fileName="I_net_v.dat">
            <OutputColumn id="I_net_0_IF_curr_alpha_I_net_v" quantity="I_net/0/IF_curr_alpha_I_net/v"/> 
            <OutputColumn id="I_net_1_IF_curr_alpha_I_net_v" quantity="I_net/1/IF_curr_alpha_I_net/v"/> 
        </OutputFile>
        
    </Simulation>

</Lems>
